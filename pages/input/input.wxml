<!--pages/input/input.wxml-->
<!--1.input基本使用，可单标签 双标签-->
<input />

<!--2.value:input框的默认值-->
<input value="默认值" />

<!--3.type:决定键盘输入类型（text文本 number数字 idcard身份证 digit小数点...）-->
<input type="idcard"/>

<!--4.password:暗文输入-->
<input password />

<!--5.placeholder:占位符-->
<input placeholder="请输入内容" />

<!--6.confirm-type:设置键盘右下角按钮的文字，仅在type='text'时生效 默认done send:发送 search：搜索 next:下一个 go:前往 done:完成-->
<input placeholder="设置键盘右下角按钮的文字1" confirm-type="send"/>
<input placeholder="设置键盘右下角按钮的文字2" confirm-type="search"/>
<input placeholder="设置键盘右下角按钮的文字3" confirm-type="next"/>
<input placeholder="设置键盘右下角按钮的文字4" confirm-type="go"/>
<input placeholder="设置键盘右下角按钮的文字5" />

<!--7.绑定事件bindinput  bindfocus bindblur bindconfirm bindkeyboardheightchange-->
<input bindinput="handleInput" bindfocus="handleFocus" bindblur="handleBlur" />