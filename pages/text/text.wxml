<!--pages/text/text.wxml-->
<!--1.text组件基本属性-->
<text>hello world \n</text>
<text>你好 小程序 \n</text>

<!--2.selectable:true-->
<!--默认text中的文本长按是不能选中,以下两种都可以，推荐第二种-->
<text selectable="{{true}}">hello F\n</text>
<text selectable>hello X\n</text>

<!--3.space：决定文本空格大小-->
<text >hello X\n</text>
<text space="nbsp">hello X\n</text>
<text space="ensp">hello X\n</text>
<text space="emsp">hello X\n</text>

<!--4.decode:是否解码文本,默认false-->
<text decode="{{true}}">5 &gt; 3 \n</text>
<text decode>5 &gt; 3</text>
