<!--pages/home/home.wxml-->
<!--1.事件处理的回顾-->
<button bindtap="handleClick">按钮</button>
<button bind:tap="handleClick">按钮1</button>
<button catch:tap="handleClick">按钮1</button>

<!--2.常见的事件-->
<view class="box" bindtouchstart="handleTouchStart" bindtouchmove="handleTouchEnd" bindtouchmove="handleMove" bindlongpreass="handleLongpress" bindtap="handletap"></view>

<!--3.事件对象的分析-->
<button bindtap="handleObject" bindtouchend="handleEventEnd" id='first' class="btn">事件对象</button>
<view id="outer" class="outer" bindtap="handleOuter">
外层view
<view id="inner" class="inner" bindtap="handleInner">内层view</view>
</view>


<!--4.事件的参数传递 
     格式：data-属性名称（名称可自己随意取） 
     获取：event.currentTarget.dataset.属性名字-->
<view class="box1">
<block wx:for="{{titles}}" wx:key="ii">
<view class="box1-item" bindtap="handleEventParam" data-index="{{index}}" data-currentItem="{{item}}">{{item}}</view>
</block>
</view>

<!--5.事件冒泡与事件捕获-->
<!--bind:一层层传递--->
<!--catch:阻止事件的进一步传递-->
<view class="view1" capture-bind:tap="handleCaptureView1" bindtap="handleBindView1">bind
  <view class="view2" capture-bind:tap="handleCaptureView2" bindtap="handleBindView2">
    <view class="view3" capture-bind:tap="handleCaptureView3" bindtap="handleBindView3">
    </view>
  </view>
</view>
<view>-----</view>
<view class="view1" capture-catch:tap="handleCaptureView1" bindtap="handleBindView1">catch
  <view class="view2" capture-bind:tap="handleCaptureView2" catchtap="handleBindView2">
    <view class="view3" capture-bind:tap="handleCaptureView3" bindtap="handleBindView3">
    </view>
  </view>
</view>